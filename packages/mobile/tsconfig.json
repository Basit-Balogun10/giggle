{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "jsx": "react-native",
    "lib": [
      "ES2020"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*",
        "components/*",
        "../../*"
      ],
      "@components/*": [
        "components/*",
        "src/components/*",
        "../../components/*"
      ],
      "@/components/*": [
        "components/*",
        "src/components/*"
      ],
      "@hooks/*": [
        "src/hooks/*",
        "hooks/*",
        "../../hooks/*"
      ],
      "@/hooks/*": [
        "hooks/*",
        "src/hooks/*"
      ],
      "@/constants/*": [
        "constants/*",
        "src/constants/*",
        "../../constants/*"
      ],
      "@/ui/*": [
        "ui/*",
        "src/ui/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "components/**/*",
    "src/components/**/*",
    "hooks/**/*",
    "../../components/**/*",
    "../../hooks/**/*",
    "../../constants/**/*"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
